<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8">
    <title>Antonio - C.F. BlogSite</title>
    <meta name="description" content="">

    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Favicon and Apple Touch Icons -->
    <link rel="shortcut icon" href="~/img/favicon/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/img/favicon/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/img/favicon/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/img/favicon/apple-touch-icon-114x114.png">

    <!-- Stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">


    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/style.css?011">

    <link rel="stylesheet" href="~/css/media.css?012">

    <!--[if lt IE 9 ]>
    <script src="/js/html5shiv-master/html5shiv.js" type="text/javascript"></script><meta content="no" http-equiv="imagetoolbar">
    <![endif]-->

</head>

<body>

    <div class="loader">
        <div class="sk-folding-cube">
            <div class="sk-cube1 sk-cube"></div>
            <div class="sk-cube2 sk-cube"></div>
            <div class="sk-cube4 sk-cube"></div>
            <div class="sk-cube3 sk-cube"></div>
        </div>
    </div>


    <!-- Header Section -->
    <header id="home" class="blog_head_bg">
        <div class="overlay_color">
            <div class="mnu_line">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <div class="logo_block">
                                <a href="#" class="toggle-mnu hidden-lg hidden-md hidden-sm"><span></span></a> <!-- toogle menu for small screen -->
                                <!--<h1 class="logo_img"><a class="none" href="">John - Personal HTML Template For Creative Professionals</a></h1>--><!-- Delete comment -->
                                <h1 class="logo"><a href="">B.</a></h1><!-- Change logo text -->
                            </div>
                        </div>

                        <!--Desktop Main Menu-->
                        <div class="col-md-8 col-sm-8 col-xs-0">
                            <div class="nav_block">
                                <div class="mnu hidden-xs">
                                    <ul>
                                        <li><a href="">Portfolio</a></li>
                                        <li><a href="">Contact</a></li>
                                        @*<li class="lamp"><span></span></li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-0">
                            <div class="nav_block">
                                <div class="mnu hidden-xs">
                                    <ul>
                                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                        {
                            <li><a style="color:red">Admin :</a></li>
                                            <li><a href="@Url.Action("Index", "Blogs")" style="color:red">Blogs</a></li>
                                                            <li><a href="@Url.Action("Index", "Posts")" style="color:red">Posts</a></li>
                                                                            <li><a href="@Url.Action("Index", "Comments")" style="color:red">Comments</a></li>
                                                                                            <li><a href="@Url.Action("Index", "Tags")" style="color:red">Tags</a></li>
                                                                                            @*<li class="lamp"><span></span></li>*@}
                                    </ul>
                                </div>
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                        <!--End Desktop Main Menu-->
                        <div class="col-xs-12 top_mnu">
                            <div class="mnu_menu">
                                <ul>
                                    <li><a href="index.html#portfolio">Portfolio</a></li>
                                    <li><a href="index.html#contact">Contact</a></li>
                                </ul>
                            </div>
                        </div>
                    </div> <!-- end row -->
                            </div> <!-- end container -->
                        </div>
                        <div class="content_head">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="content_head_txt">
                                            <p>MY THOUGHTS</p>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="content_bottom_txt">
                                            <p>Take a look and share your opinion.</p>
                                        </div>
                                    </div>
                                </div><!-- end row -->
                            </div><!-- end container -->
                        </div>
                    </div>
    </header>
    <!-- End Header Section -->

    @RenderBody()

    <!--./content-->
    <!-- Footer Section -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="social">
                        <ul>
                            <li>
                                <a href="https://www.youtube.com/channel/UCTGgxc_jIz2z9mpfInuPHWQ"><i class="fa fa-youtube" aria-hidden="true"></i></a>
                            </li>
                            <li>
                                <a href="https://www.twitch.tv/coderfoundry"><i class="fa fa-twitch" aria-hidden="true"></i></a>
                            </li>
                            <li>
                                <a href="https://www.linkedin.com/company/coderfoundry/"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="copyright">
                        <p>Copyright &copy; @DateTime.Today.Year . All rights reserved</p>
                    </div>
                </div>
            </div><!-- end row -->
        </div><!-- end container -->
    </footer>
    <!-- End Footer Section -->
    <!-- go to top -->
    <a href="#home" class="scrollup"><i class="fa fa-angle-up"></i></a>
    <!-- end go to top -->
    <!-- JS -->
    <script type="text/javascript" src="~/js/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap/bootstrap.js"></script>
    <script type="text/javascript" src="~/js/magnific-popup/magnific-popup.min.js"></script>
    <script type="text/javascript" src="~/js/parallax/parallax.min.js"></script>
    <script type="text/javascript" src="~/js/page-scroll-to-id/jquery.malihu.PageScroll2id.js"></script>
    <script type="text/javascript" src="~/js/wow/wow.min.js"></script>
    <script type="text/javascript" src="~/js/isotope/isotope.pkgd.min.js"></script>
    <script type="text/javascript" src="~/js/countUp/jquery.countup.min.js"></script>
    <script type="text/javascript" src="~/js/waypoints/jquery.waypoints.min.js"></script>
    <script type="text/javascript" src="~/js/functions.js"></script>
    <!--End JS -->
    @RenderSection("Scripts", required: false)
</body>
</html>
